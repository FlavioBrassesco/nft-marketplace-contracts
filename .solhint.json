{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "warning",
    "max-line-length": "off",
    "no-inline-assembly": "off",
    "avoid-low-level-calls": "off",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error", "^0.8.0"]
  }
}
