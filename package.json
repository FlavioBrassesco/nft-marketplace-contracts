{
  "name": "nft-marketplace-contracts",
  "version": "1.0.0",
  "description": "Open source NFT Marketplace Contracts",
  "author": "Flavio Brassesco",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "prepare": "husky install",
    "solhint": "solhint -f table contracts/**/*.sol",
    "prettier:solidity": "prettier --write contracts/**/*.sol",
    "h:compile": "hardhat compile",
    "h:test": "hardhat test",
    "h:mockup": "hardhat node && hardhat run --network localhost scripts/mockup-deploy.js",
    "h:mumbai": "hardhat run --network mumbai scripts/deploy.js"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.5.0",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v2-core": "^1.0.1",
    "ethers": "^5.5.2",
    "ethers-eip712": "^0.2.0",
    "hardhat": "^2.8.0",
    "ipfs-http-client": "^55.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "hardhat-contract-sizer": "^2.5.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.sol": "solhint -f table",
    "*.{js,css,md,sol}": "prettier --write"
  }
}
